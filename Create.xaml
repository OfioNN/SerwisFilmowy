<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SerwisFilmowy.Create"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SerwisFilmowy"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.15*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.RowSpan="3" Background="#FF191919"/>

        <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,0,25">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="- Tytuł -" Foreground="White" FontSize="12" Padding="0"/>
            <TextBox x:Name="TitleBox" Grid.Column="0" Grid.Row="1" FontSize="16" TextAlignment="Left" FontStyle="Italic" Foreground="White" FontFamily="Arial" FontWeight="Medium" BorderBrush="#000814" BorderThickness="1" Background="#003554" Padding="5,3,0,3" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="20,0,20,0"/>
            <TextBlock Grid.Row="2" Text="- Rok produkcji -" Foreground="White" FontSize="12" Padding="0"/>
            <TextBox x:Name="YearBox" Grid.Column="0" Grid.Row="3" FontSize="16" TextAlignment="Left" FontStyle="Italic" Foreground="White" FontFamily="Arial" FontWeight="Medium" BorderBrush="#000814" BorderThickness="1" Background="#003554" Padding="5,3,0,3" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="20,0,20,0"/>
            <TextBlock Grid.Row="4" Text="- Reżyser -" Foreground="White" FontSize="12" Padding="0"/>
            <TextBox x:Name="DirectorBox" Grid.Column="0" Grid.Row="5" FontSize="16" TextAlignment="Left" FontStyle="Italic" Foreground="White" FontFamily="Arial" FontWeight="Medium" BorderBrush="#000814" BorderThickness="1" Background="#003554" Padding="5,3,0,3" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="20,0,20,0"/>
            <TextBlock Grid.Row="6" Text="- Obsada -" Foreground="White" FontSize="12" Padding="0"/>
            <TextBox x:Name="CastBox" Grid.Column="0" Grid.Row="7" FontSize="16" TextAlignment="Left" FontStyle="Italic" Foreground="White" FontFamily="Arial" FontWeight="Medium" BorderBrush="#000814" BorderThickness="1" Background="#003554" Padding="5,3,0,3" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="20,0,20,0"/>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="- Opis -" Foreground="White" FontSize="12" Padding="0"/>
                <TextBox x:Name="DescriptionBox" AcceptsReturn="True" Grid.Column="0" Grid.Row="1" FontSize="16" TextAlignment="Left" FontStyle="Italic" Foreground="White" FontFamily="Arial" FontWeight="Medium" BorderBrush="#000814" BorderThickness="1" Background="#003554" Padding="5,3,0,3" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="20,0,20,0" TextWrapping="Wrap"/>
        </Grid>

            <Rectangle Grid.Row="1" Fill="#FF191919" Margin="200,50,200,50"/>
            <TextBlock Grid.Row="1" Text="Nie wybrano zdjęcia." Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        </Grid>

        <Grid Grid.Column="1" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Style="{StaticResource CustomButtonStyle}" Grid.Column="0" Grid.Row="0" Margin="25,10,125,10" Content="Wczytaj zdjęcie" Foreground="White" FontWeight="Bold" FontSize="14" FontFamily="Arial" Click="LoadImage_Click"/>
            <Button Style="{StaticResource CustomButtonStyle}" Grid.Column="1" Grid.Row="0" Margin="150,10,25,10" Content="Zapisz" Foreground="White" FontWeight="Bold" FontSize="14" FontFamily="Arial" Click="Save_Click"/>

        </Grid>

        <Button Style="{StaticResource CustomButtonStyle}" Grid.Column="0" Grid.Row="2" Margin="25,10,150,10" Content="Wstecz" Foreground="White" FontWeight="Bold" FontSize="14" FontFamily="Arial" Click="Back_Click"/>

        <!-- Główna zawartość z Frame -->
        <Frame x:Name="ContentFrame" Grid.ColumnSpan="2" Grid.RowSpan="2" Margin="0">
            <Frame.ContentTransitions>
                <TransitionCollection>
                    <NavigationThemeTransition />
                </TransitionCollection>
            </Frame.ContentTransitions>
        </Frame>

    </Grid>
</Page>
